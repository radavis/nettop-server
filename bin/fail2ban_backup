#!/bin/sh

destination=${BACKUP_PATH:-"$(pwd)/.backup"}

container=fail2ban
image=fail2ban:nettop
timestamp=$(env TZ=UTC date "+%Y%m%d%H%M%S")

docker run --rm \
  --entrypoint "/bin/tar" \
  --volumes-from ${container} \
  -v ${destination}:/backup \
  ${image} \
  "-cf" "/backup/${container}-data-${timestamp}.tar" "-C" "/" "data"
